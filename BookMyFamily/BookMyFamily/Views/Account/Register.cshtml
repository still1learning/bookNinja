@{
    ViewBag.Title = "Register";
}

<link href="~/Content/style.css" rel="stylesheet" />
<link href="~/Content/animation.css" rel="stylesheet" />


<div id="overlay" class="web_dialog_overlay"></div>
<div id="dialog" class="web_dialog">
    <form id="msform" method="post" action="~/Account/MakeAcount">
        <!-- progressbar -->
        <ul id="progressbar">
            <li class="active">Account Setup</li>
            <li>Social Profiles</li>
            <li>Personal Details</li>
        </ul>
        <!-- fieldsets -->
        <fieldset>
            <h2 class="fs-title">Create your account</h2>
            <h3 class="fs-subtitle">Step 1</h3>
            <input type="text" name="email" class="form-control" placeholder="Email" />
            <input type="password" name="pass" class="form-control" placeholder="Password" />
            <input type="password" name="cpass" class="form-control" placeholder="Confirm Password" />
            <input type="button" class="next action-button" value="Next" />
        </fieldset>
        <fieldset>
            <h2 class="fs-title">Social Profiles</h2>
            <h3 class="fs-subtitle">Step 2</h3>
            <input type="text" name="twitter" class="form-control" placeholder="Twitter" />
            <input type="text" name="facebook" class="form-control" placeholder="Facebook" />
            <input type="text" name="gplus" class="form-control" placeholder="Google Plus" />
            <input type="button" class="previous action-button" value="Previous" />
            <input type="button" class="next action-button" value="Next" />
        </fieldset>
        <fieldset>
            <h2 class="fs-title">Personal Details</h2>
            <h3 class="fs-subtitle">Final step</h3>
            <div class="custom_file_upload">
                <input type="text" id="file" class="form-control" name="file_info" placeholder="IMAGE">
                <div class="file_upload">
                    <input type="file" id="file_upload" name="file_upload" value="Upload">
                </div>
            </div>
            <input type="text" name="fname" class="form-control" placeholder="First Name" />
            <input type="text" name="lname" class="form-control" placeholder="Last Name" />
            <input type="text" name="phone" class="form-control" placeholder="Phone" />
            <textarea name="address" class="form-control" placeholder="Address"></textarea>
            <input type="button" class="previous action-button" value="Previous" />
            <input type="submit" class="submit action-button" value="Submit" id="create" />
        </fieldset>
    </form>
</div>
<div class="avatar">
    <div class="menu">
        <div></div>
        <a href="~/Home/Profile"><span class="typicons-user" title="See my profile"></span></a>
        <div></div>
        <a href="#"><span class="typicons-cog" title="Edit my profile"></span></a>
        <div></div>
        <a href="#"><span class="typicons-mail" title="Send me an email"></span></a>
    </div>
    <img src="http://s.cdpn.io/953/yo.jpg" alt="" />
</div>
<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<script src="~/Scripts/jquery-easing.min.js"></script>
<script src="~/Scripts/form.js"></script>
<script>
    $(function () {
        $("#create").click(function (e) {
            e.preventDefault(); //prevents submitting the form thus refreshing the page
            $("#profile_hover").html(""); //empties in case it has any previous values

            $.each($('.form-control'), function (i, v) {
                $("#profile_hover").append($(v).val());
                $("#profile_hover").append("<br />");
                $("#msform").fadeOut(600);

            });
        });
    });

</script>
<script>
    $(document).ready(function () {
        $("#add_form").click(function (e) {
            ShowDialog(false);
            e.preventDefault();
        });

        $("#create").click(function (e) {
            HideDialog();
            e.preventDefault();
        });

        $("#create").click(function (e) {
            var brand = $("#brands input:radio:checked").val();
            $("#output").html("<b>Your favorite mobile brand: </b>" + brand);
            HideDialog();
            e.preventDefault();
        });

    });
    function ShowDialog(modal) {
        $("#overlay").show();
        $("#dialog").fadeIn(400);

        if (modal) {
            $("#overlay").unbind("click");
        }
        else {
            $("#overlay").click(function (e) {
                HideDialog();
            });
        }
    }

    function HideDialog() {
        $("#overlay").hide();
        $("#dialog").fadeOut(700);
        $(".container").fadeIn(600);
        $(".avatar").fadeIn(600);
    }
    </script>
